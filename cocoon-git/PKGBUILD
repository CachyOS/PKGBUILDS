# Maintainer: robertfoster

pkgname=cocoon-kf5-git
pkgver=r1149.8178df8
pkgrel=1
pkgdesc="A GUI for Git"
arch=('x86_64')
url="https://projects.kde.org/projects/playground/sdk/cocoon"
license=('LGPL')
depends=(kdelibs4support hicolor-icon-theme)
makedepends=('git' 'automoc4' 'extra-cmake-modules')
source=("git+git://anongit.kde.org/cocoon.git#branch=frameworks")
md5sums=('SKIP')

pkgver() {
  cd ${pkgname%%-*}
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
  }

prepare() {
  mkdir build
  }
  
build() {
  cd build
  cmake ../${pkgname%%-*} \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib \
    -DBUILD_TESTING=OFF \
    -DCMAKE_BUILD_TYPE=Release 
  make
}  

package(){
  cd build
  make DESTDIR=$pkgdir install
  rm -rf "$srcdir/$_gitname-build"
} 

