# Maintainer: pavbaranov <pavbaranov at gmail dot com>

pkgname=darktable-pl
pkgver=2.6.0
pkgrel=1
pkgdesc='Polish language pack for Darktable'
arch=('any')
url='https://darktable.org'
license=('GPL3')
makedepends=(gettext )
optdepends=('darktable: without it there is no sense for this package')
source=(https://raw.githubusercontent.com/darktable-org/darktable/master/po/pl.po)
md5sums=('5d3854bbc422de185418cfb93fae7863')

build() {
    msgfmt pl.po -o darktable.mo
}

package() {
  install -dm755 "$pkgdir"/usr/share/locale/pl/LC_MESSAGES
  install -m644 darktable.mo "$pkgdir"/usr/share/locale/pl/LC_MESSAGES
}
