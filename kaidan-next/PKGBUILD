# Maintainer: pavbaranov <pavbaranov at gmail dot com>

pkgname=kaidan-next
pkgver=0.4.0.rc1
pkgrel=1
pkgdesc="Simple and user-friendly Jabber/XMPP client for every device"
arch=('x86_64')
url="https://www.kaidan.im"
license=('GPL3')
depends=('hicolor-icon-theme' 'qt5-declarative' 'qxmpp' 'desktop-file-utils')
makedepends=('extra-cmake-modules')
source=("https://github.com/KaidanIM/Kaidan/archive/v0.4.0-rc1.tar.gz")
sha256sums=('dff5807b989a83ce4eda5a01ff33d232210460f5301091d2375ee0007ff01c1a')
conflicts=(kaidan)
replace=(kaidan)
provides=(kaidan)


prepare() {
    mkdir -p build
    }

build() {
    cd build
    cmake ../Kaidan-${pkgver%.*}-rc1 \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DI18N=ON
    make
    }

package() {
    cd build
        make DESTDIR="$pkgdir" install
    }
