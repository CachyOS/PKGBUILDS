# Maintainer: pavbaranov <pavbaranov at gmail dot com>

pkgname=bdic-pl
pkgver=20171208
pkgrel=1
pkgdesc='Polish dictionary for Falkon, Chromium and other'
arch=('any')
url='http://www.sjp.pl/slownik/ort/'
license=('GPL')
makedepends=(qt5-webengine)
source=(https://sources.archlinux.org/other/community/hunspell-pl/sjp-myspell-pl-$pkgver.zip)
md5sums=('bf48ef8aec7b71c12d88112099d877b3')

prepare() {
  bsdtar -xf pl_PL.zip

  qwebengine_convert_dict pl_PL.dic pl_PL.bdic
}

package() {
  install -dm755 "$pkgdir"/usr/share/qt/qtwebengine_dictionaries
  install -m644 pl_PL.bdic "$pkgdir"/usr/share/qt/qtwebengine_dictionaries
}
