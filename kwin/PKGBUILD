#kdebug-424255.patch::"https://invent.kde.org/plasma/kwin/commit/4a6badc22c88a30b10b4e288728981f225cba728.patch"
#kdebug-422460.patch::"https://invent.kde.org/plasma/kwin/commit/6c9026628cdbfd38baeeceb48e672c5458e93f8e.patch"
#kdebug-421232.patch::"https://invent.kde.org/plasma/kwin/commit/2d13bc3aa8e6943fc169ab71310ee1ecc680a14b.patch"
kdebug-424607.patch::"https://invent.kde.org/plasma/kwin/commit/a051baf1a921905e318b47c4489a0a78b8cf873f.patch")
install=$pkgname.install
sha256sums=('456205b964efadadc6df8e5f3db40da3719bec567cf93f2719b015561a57672e'
            'SKIP'
            'c68acbcc96c49753d45abf426caae03774829601574a8ab8f3561c8ee1c5920e'
