prepare() {
    msg "Add kdebug 428301 patch; fix in 5.22"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-428301.patch
    msg "Add commit 30464e5c patch; fix in 5.22"
    patch -d $pkgname-$pkgver -p1 -i ../commit-30464e5c.patch
    msg "Add commit 2b721200 patch; fix in 5.22"
    patch -d $pkgname-$pkgver -p1 -i ../commit-2b721200.patch
#    msg "Add kdebug 407793 patch; fix probably in 5.22"
#    patch -d $pkgname-$pkgver -p1 -i ../kdebug-407793.patch
#    msg "Add commit 12e0376f patch; fix in 5.22"
#    patch -d $pkgname-$pkgver -p1 -i ../commit-12e0376f.patch
#    msg "Add kdebug 431211 patch; fix in 5.22"
#    patch -d $pkgname-$pkgver -p1 -i ../kdebug-431211.patch
    
}

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
