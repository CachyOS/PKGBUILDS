prepare() {
  msg "Add kdebug 425590 patch"
  patch -d $pkgname-$pkgver -p1 -i ../kdebug-425590.patch
  msg "Add kdebug 426120 patch"
  patch -d $pkgname-$pkgver -p1 -i ../kdebug-426120.patch
  msg "Add kdebug 426122 patch"
  patch -d $pkgname-$pkgver -p1 -i ../kdebug-426122.patch
  msg "Add kdebug 428039 patch"
  patch -d $pkgname-$pkgver -p1 -i ../kdebug-428039.patch
  msg "Add allow configuring click behavior in Desktop Grid effect patch; fix in 5.21"
  patch -d $pkgname-$pkgver -p1 -i ../commit-dbcf43ab.patch
  #msg "Add kdebug 424754 patch; fix in 5.21"
  #patch -d $pkgname-$pkgver -p1 -i ../kdebug-424754.patch
  #msg "Add mark cursor as rendered after performing compositing patch"
  #patch -d $pkgname-$pkgver -p1 -i ../commit-9b09f039.patch
  #msg "Add kdebug 419032 patch"
  #patch -d $pkgname-$pkgver -p1 -i ../kdebug-419032.patch
  #msg "Add kdebug 428439 patch"
  #patch -d $pkgname-$pkgver -p1 -i ../kdebug-428439.patch
 # msg "Add show defaults indicator in System Settings patch"
 # patch -d $pkgname-$pkgver -p1 -i ../commit-9cbac6fe.patch
}

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
