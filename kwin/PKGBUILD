prepare() {
    msg "Add kdebug 424223 patch; fix in 5.19.4"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-424223.patch
    msg "Add kdebug 424389 patch; fix in 5.19.4"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-424389.patch
    msg "Add kdebug 423596 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-423596.patch
    msg "Add kdebug 424571 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-424571.patch
 #   msg "Add kdebug 424255 patch"
 #   patch -d $pkgname-$pkgver -p1 -i ../kdebug-424255.patch
 #   msg "Add kdebug 422460 patch; fix in 5.20"
 #   patch -d $pkgname-$pkgver -p1 -i ../kdebug-422460.patch
 #   msg "Add kdebug 421232 patch; fix in 5.20"
 #   patch -d $pkgname-$pkgver -p1 -i ../kdebug-421232.patch
    msg "Add kdebug 406302 patch; fix in 5.19.4"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-406302.patch
    }
build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
