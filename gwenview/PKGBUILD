prepare() {
    msg "Added kdebug 414769 patch; fix in 21.04"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-414769.patch
    msg "Added kdebug 393314 patch; fix in 21.04"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-393314.patch
    msg "Added kdebug 348746 patch; fix in 21.04"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-348746.patch
    msg "Added kdebug 431680 patch; fix in 21.04"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-431680.patch
#    msg "Added kdebug 426105 patch"
#    patch -d $pkgname-$pkgver -p1 -i ../kdebug-426105.patch
    msg "Added kdebug 429531 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-429531.patch
    msg "Added kdebug 297853 patch; fix in 21.04"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-297853.patch
    msg "Added commit 3635f354; fix in 21.04"
    patch -d $pkgname-$pkgver -p1 -i ../commit-3635f354.patch
}

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DGWENVIEW_SEMANTICINFO_BACKEND="Baloo" \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
