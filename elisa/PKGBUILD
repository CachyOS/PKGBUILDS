validpgpkeys=(CA262C6C83DE4D2FB28A332A3A6A4DB839EAA6D7  # Albert Astals Cid <aacid@kde.org>
              F23275E4BF10AFC1DF6914A6DBD2CE893E2D1C87) # Christoph Feck <cfeck@kde.org>

prepare() {
   msg "Add kdebug 431602 patch; fix in 20.12.2"
   patch -d $pkgname-$pkgver -p1 -i ../kdebug-431602.patch
   msg "Add kdebug 428218 patch; fix in 20.12.2"
   patch -d $pkgname-$pkgver -p1 -i ../kdebug-428218.patch
   msg "Add kdebug 430743 patch; fix in 20.04"
   patch -d $pkgname-$pkgver -p1 -i ../kdebug-430743.patch
   msg "Add kdebug 421660 patch"
   patch -d $pkgname-$pkgver -p1 -i ../kdebug-421660.patch
   msg "Add kdebug 431422 patch; fix in 20.12.2"
   patch -d $pkgname-$pkgver -p1 -i ../kdebug-431422.patch
}

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DBUILD_TESTING=OFF 
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
