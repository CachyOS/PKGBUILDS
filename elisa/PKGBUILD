pkgname=elisa
pkgver=20.12.1
pkgrel=1.2
pkgdesc='A simple music player aiming to provide a nice experience for its users'
url='https://community.kde.org/Elisa'
arch=(x86_64)
license=(LGPL3)
groups=(kde-applications kde-multimedia)
depends=(baloo kirigami2 kdeclarative vlc) # upnp-player-qt
makedepends=(extra-cmake-modules kdoctools)
source=("https://download.kde.org/stable/release-service/$pkgver/src/$pkgname-$pkgver.tar.xz"{,.sig}
kdebug-431602.patch::"https://invent.kde.org/multimedia/elisa/commit/afaf25d815763728ac842922dd422377f66079dc.patch"
kdebug-428218.patch::"https://invent.kde.org/multimedia/elisa/commit/6951479520ac241072ac3f03a310fff522579453.patch"
kdebug-430743.patch::"https://invent.kde.org/multimedia/elisa/commit/d825da3dd869dc2cec45a80ecd6351bc241fafcc.patch"
kdebug-421660.patch::"https://invent.kde.org/multimedia/elisa/commit/c2b3d0d312ac20c0aa1a4e7a34a765484c420cc3.patch"
kdebug-431422.patch::"https://invent.kde.org/multimedia/elisa/commit/e2845b589170de36851ff37d36d76697adde7440.patch"
)

sha256sums=('3e360105dd08296bee61d2d92adfc7311b46bdb813be5842f4f2fbd64fecafd2'
            'SKIP'
            '1c9f8e7dc41a4e51a19b56e0e86a9349f06aae5ca5af3b25574e79e956a0e68a'
