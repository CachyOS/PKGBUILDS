url='https://www.kde.org/workspaces/plasmadesktop/'
license=(LGPL)
source=("https://download.kde.org/stable/plasma/$pkgver/$pkgname-$pkgver.tar.xz"{,.sig}
kdebug-419718.patch::"https://invent.kde.org/plasma/plasma-desktop/commit/075a43667cfd75f36ca3430ca87518228617aaa5.patch"
