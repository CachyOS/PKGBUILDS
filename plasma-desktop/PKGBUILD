prepare() {
    msg "Add kdebug 394119 patch; fix in 5.22"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-394119.patch
#    msg "Add kdebug 433412 patch; fix in 5.22"
#    patch -d $pkgname-$pkgver -p1 -i ../kdebug-433412.patch
    msg "Add kdebug 435694 patch; fix in 5.22"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-435694.patch
    msg "Add kdebug 405307 patch; fix in 5.22"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-405307.patch
    msg "Add kdebug 436216 patch; fix in 5.21.5"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-436216.patch
    msg "Add kdebug 417457 patch; fix in 5.22"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-417457.patch
    msg "Add kdebug 425360 patch; fix in 5.22"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-425360.patch
    # msg "Add kdebug 433819 patch; fix in 5.22"
    # patch -d $pkgname-$pkgver -p1 -i ../kdebug-433819.patch
}

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
