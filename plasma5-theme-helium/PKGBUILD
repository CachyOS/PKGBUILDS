# Maintainer: pavbaranov <pavbaranov at gmail dot com>

pkgname=plasma5-theme-helium
pkgver=8.6.3
pkgrel=1
pkgdesc="A translucent theme for Plasma 5"
arch=('any')
license=('CC BY-SA 4.0') # See: https://creativecommons.org/licenses/by-sa/4.0/
url="https://store.kde.org/p/998869/" 
conflicts=('plasma-theme-gremix' 'plasma-theme-helium')
replace=('plasma-theme-helium')
source=("https://dl.opendesktop.org/api/files/download/id/1540216476/s/e8e9441c30b3fe5edd3a2c8c953ccc1c/t/1540854719/u//Helium.tar.gz")
md5sums=('8c32acdf27f16697db608940e4c66948')

package() {

  mkdir -p $pkgdir/usr/share/apps/desktoptheme
  cd $srcdir
  cp -r Helium $pkgdir/usr/share/apps/desktoptheme
  chmod -R 755 $pkgdir/usr/share/apps/desktoptheme/Helium

}
