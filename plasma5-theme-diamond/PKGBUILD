# Maintainer: pavbaranov <pavbaranov at gmail dot com>

pkgname=plasma5-theme-diamond
pkgver=3.0
pkgrel=1
pkgdesc="Transparent theme for Plasma 5"
arch=('any')
license=('GPL3')
url="https://store.kde.org/p/1259546/" 
conflicts=('plasma-theme-diamond')
replace=('plasma-theme-diamond')
source=("https://dl.opendesktop.org/api/files/download/id/1536347993/s/af9a0cde3776de9afae841dbf13017b4/t/1540856517/u//Diamond_3.0.tar.xz")
md5sums=('1b24d4e7ca850a456be94547376f51e9')

package() {

  mkdir -p $pkgdir/usr/share/apps/desktoptheme
  cd $srcdir
  cp -r Diamond $pkgdir/usr/share/apps/desktoptheme
  chmod -R 755 $pkgdir/usr/share/apps/desktoptheme/Diamond

}
