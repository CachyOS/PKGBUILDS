source=("https://dl.opendesktop.org/api/files/download/id/1526471940/s/af7d8ea73470b0d4e6b9b725225736d8263b2ec5df807349cda0d314a92e5b504f1ebe5a04f5d74444e05092e8a45cdffb685db2cd913f8792c325717995417e/t/1541886347/u//KTrans-0.98.tar.gz")
