pkgname=plasma-theme-ktrans
pkgver=0.98
pkgrel=1
pkgdesc="Transparent theme for Plasma 5"
arch=('any')
license=('GPL')
url="https://store.kde.org/p/1190369/"
depends=('')
source=("https://dl.opendesktop.org/api/files/downloadfile/id/1525861789/s/47214baf7bdbc00329d0eece09fadbb8/t/1525905256/u/441232/KTrans-0.98.tar.gz")
sha256sums=('2942710943b6df66a5f87b23bfabc90187a49814c0393167eafe4ab9736fcb05')

package() {
 mkdir -p ${pkgdir}/usr/share/plasma/desktoptheme
 cp -r KTrans ${pkgdir}/usr/share/plasma/desktoptheme
 rm -r ${pkgdir}/usr/share/plasma/desktoptheme/KTrans/wallpapers
} 
