# Maintainer: pavbaranov <pavbaranov at gmail dot com>

pkgname=kaidan
pkgver=0.4.0
pkgrel=1
pkgdesc="Simple and user-friendly Jabber/XMPP client for every device"
arch=('x86_64')
url="https://www.kaidan.im"
license=('GPL3')
depends=(qxmpp hicolor-icon-theme qt5-declarative knotifications desktop-file-utils)
makedepends=(extra-cmake-modules)
source=("https://archive.kaidan.im/$pkgname/$pkgver/$pkgname-$pkgver.tar.xz")
sha256sums=('c2ec16d2acfb4c62d3eef652e492a7267124148d458321436eaf1916e8ed4d9e')


prepare() {
    mkdir -p build
    }

build() {
    cd build
    cmake ../$pkgname-$pkgver \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release \
        -DI18N=ON
    make
    }

package() {
    cd build
        make DESTDIR="$pkgdir" install
    }
