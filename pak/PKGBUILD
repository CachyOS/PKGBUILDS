# Contributor: pavbaranov <pavbaranov at gmail dot com>

# You had to install all optdepends for functionality of this script
 
pkgname=pak
pkgver=1.4.4
pkgrel=1
pkgdesc="Simple pacman and AUR frontend"
arch=('any')
url="https://gitlab.com/nycko123/pak"
license=('GPL')
depends=('bash' 'git')
optdepends=("asp: to download PKGBUILD's of official packages"
            "cower: to manage AUR packages")
 
source=("https://gitlab.com/nycko123/pak/raw/master/$pkgname-$pkgver.tar.gz")
 
sha256sums=('b0cdeed6d317e8abd1a5c6d1e814b3b525a6a169d6f3f34e58091d31f9d19cbd')
 
package(){
 install -Dm755 "$srcdir/$pkgname" "$pkgdir/usr/bin/$pkgname"
 install -Dm644 "$srcdir/pak.conf" "$pkgdir/etc/xdg/pak.conf"
 install -Dm644 "$srcdir/locale/pl.mo" "$pkgdir/usr/share/locale/pl/LC_MESSAGES/pak.mo"
}
