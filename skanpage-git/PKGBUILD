# Maintainer: pavbaranov <pavbaranov at gmail dot com>

pkgname=skanpage-git
pkgver=9
pkgrel=1
pkgdesc='Multipage document scanner application'
arch=('x86_64')
url='https://github.com/scratch/sars/skanpage.git'
license=('GPL')
depends=('libksane' 'qt5-declarative' 'kxmlgui')
#optdepends=('')
makedepends=('git' 'extra-cmake-modules')
source=("git+https://invent.kde.org/sars/skanpage.git"
"skanpage.desktop")
sha256sums=('SKIP'
            '888a9571a0ce049bdf14181796997cc18941276f898fef2d1393c9fa43bd240e')

pkgver() {
  cd ${pkgname%-*}
  printf "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd ${pkgname%-*}/src

  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release ..
  make 
}

package() {
  cd ${pkgname%-*}/src/build

  make DESTDIR=${pkgdir} install
  mkdir -p "$pkgdir/usr/share/applications/"
  cp $srcdir/skanpage.desktop $pkgdir/usr/share/applications/
}
