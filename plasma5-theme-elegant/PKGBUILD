# Maintainer: pavbaranov <pavbaranov at gmail dot com>

pkgname=plasma5-theme-evanescent-git
pkgver=r11.96472b7
pkgrel=1
pkgdesc="Elegant Plasma Theme"
arch=(any)
license=(LGPL3)
url="https://github.com/bolimage/Elegant" 
source=("git+https://github.com/bolimage/Elegant.git")
md5sums=('SKIP')

pkgver() {
  cd Elegant
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
  }


package() {

  mkdir -p $pkgdir/usr/share/apps/desktoptheme
  cd $srcdir
  cp -r Elegant/Elegant $pkgdir/usr/share/apps/desktoptheme
  chmod -R 755 $pkgdir/usr/share/apps/desktoptheme/Elegant

}
