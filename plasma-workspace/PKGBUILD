prepare() {
  sed -e 's|dbus-run-session ||' -i $pkgbase-$pkgver/login-sessions/plasmawayland.desktop.cmake # Don't start a second user dbus session
  
#    msg "Add systemd startup patch"
#    patch -d $pkgbase-$pkgver -p1 -i ../systemd-startup.patch
     msg "Add kdebug 426900 patch"
     patch -d $pkgbase-$pkgver -p1 -i ../kdebug-426900.patch
#    msg "Add kdebug 424230 patch; fix in 5.21"
#    patch -d $pkgbase-$pkgver -p1 -i ../kdebug-424230.patch
#    msg "Add kdebug 426746 patch"
#    patch -d $pkgbase-$pkgver -p1 -i ../kdebug-426746.patch
     msg "Add kdebug 353026 patch; fix in 5.21"
     patch -d $pkgbase-$pkgver -p1 -i ../kdebug-353026.patch
#    msg "Add kdebug 374637 patch; fix in 5.21"
#    patch -d $pkgbase-$pkgver -p1 -i ../kdebug-374637.patch
#    msg "Add kdebug 423003 patch; fix in 5.21"
#    patch -d $pkgbase-$pkgver -p1 -i ../kdebug-423003.patch
     msg "Add kdebug 428026 patch; fix in 5.21"
     patch -d $pkgbase-$pkgver -p1 -i ../kdebug-428026.patch
     msg "Add kdebug 211255 patch; fix in 5.21"
     patch -d $pkgbase-$pkgver -p1 -i ../kdebug-211255.patch
     msg "Add kdebug 354239 patch; fix in 5.21"
     patch -d $pkgbase-$pkgver -p1 -i ../kdebug-354239.patch
     msg "Add kdebug 342876 patch; fix in 5.21"
     patch -d $pkgbase-$pkgver -p1 -i ../kdebug-342876.patch
     msg "Add show frequently used system settings modules for System Settings patch; fix in 5.21"
     patch -d $pkgbase-$pkgver -p1 -i ../commit-b79f44f4.patch
     #msg "Add use icon tabs to select player patch; fix in 5.21"
     #patch -d $pkgbase-$pkgver -p1 -i ../commit-540f598c.patch
     msg "Add - add button to open plasmoid configuration from Entries page to system tray patch"
     patch -d $pkgbase-$pkgver -p1 -i ../commit-64f46dc0.patch
     msg "Add kdebug 398803 patch"
     patch -d $pkgbase-$pkgver -p1 -i ../kdebug-398803.patch
     msg "Add kdebug 428159 patch; fix in 5.21"
     patch -d $pkgbase-$pkgver -p1 -i ../kdebug-428159.patch
     msg "Add kdebug 422948 patch"
