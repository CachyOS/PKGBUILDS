# only for version with bugfixes from upcomming releases
# based on the original work by:
# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=qqc2-desktop-style
pkgver=5.72.0
pkgrel=1.1
pkgdesc='A style for Qt Quick Controls 2 to make it follow your desktop theme'
arch=(x86_64)
url='https://community.kde.org/Frameworks'
license=(LGPL)
groups=(kf5)
depends=(kirigami2 kiconthemes)
makedepends=(extra-cmake-modules)
source=("https://download.kde.org/stable/frameworks/${pkgver%.*}/$pkgname-$pkgver.tar.xz"{,.sig}
kdebug-423653.patch::"https://invent.kde.org/frameworks/qqc2-desktop-style/commit/41e20ee53c690fb6efeab2a40feb917d889ac624"
)
sha256sums=('606f92cd5f95d21dcfe2fc546e3046ab3c2e286fc1f8b8374110c8554ace0666'
            'SKIP'
            'bd2f3436ce864514f31f4373a77f8e8ba349c73871ea43ce0e4b3036367aa8e6')
validpgpkeys=('53E6B47B45CEA3E0D5B7457758D0EE648A48B3BB') # David Faure <faure@kde.org>

preprare() {
    msg "Add kdebug 423653 patch; fix in 5.73"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-423653.patch
    }
    
build() {
  cmake -B build -S $pkgname-$pkgver \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
