# only for version with bugfixes from upcomming releases
# based on the original work by:
# Maintainer: Antonio Rojas <arojas@archlinux.org>

pkgname=qqc2-desktop-style
pkgver=5.75.0
pkgrel=1.1
pkgdesc='A style for Qt Quick Controls 2 to make it follow your desktop theme'
arch=(x86_64)
url='https://community.kde.org/Frameworks'
license=(LGPL)
groups=(kf5)
depends=(kirigami2 kiconthemes)
makedepends=(extra-cmake-modules)
source=("https://download.kde.org/stable/frameworks/${pkgver%.*}/$pkgname-$pkgver.tar.xz"{,.sig}
kdebug-427449.patch::"https://invent.kde.org/frameworks/qqc2-desktop-style/commit/015891bf58b5f96ae142920bba48b92fe31ea0e4.patch"
kdebug-412444.patch::"https://invent.kde.org/frameworks/qqc2-desktop-style/-/commit/7220dad12864d8e7701a66557ed32e25685612ec.patch"
)
sha256sums=('770895c4363973ddcbac281526de8297a4df37bfe1df08be59e62a8caf9368d3'
            'SKIP'
            'c2c708e4364ca726438cde6ad8f642f793776080e103ebd242c4167a8f53d9c6'
            '1d52aaca79501b57a72e7288de95a9332589a631bcf88fc9c178e3128fbe7a80'
            '31ab58ef65c0e1eb716d8ee932951210dee7ccd778a102324c426d285d2eb1d6')
validpgpkeys=('53E6B47B45CEA3E0D5B7457758D0EE648A48B3BB') # David Faure <faure@kde.org>

prepare() {
    msg "Add kdebug 427449 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-427449.patch
    msg "Add kdebug 412444 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-412444.patch
}

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DBUILD_TESTING=OFF
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
