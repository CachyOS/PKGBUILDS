# Maintainer: pavbaranov <pavbaranov at gmail dot com>
# for current (2.x) version on POLAUR
# Maintainer: Michael Straube <straubem@gmx.de>

pkgname=phototonic
pkgver=2.0
pkgrel=1
pkgdesc="Image Viewer and Organizer"
arch=('x86_64')
url="https://github.com/oferkv/phototonic"
license=('GPL3')
depends=('qt5-base' 'exiv2' 'hicolor-icon-theme')
makedepends=('git')
optdepends=('qt5-imageformats: TIFF and TGA support' 'qt5-svg: SVG support')
source=(git+https://github.com/oferkv/phototonic.git#tag=v2.0)
sha256sums=('SKIP')

build() {
  cd $pkgname
  qmake PREFIX="/usr" 
  make
}

package() {
  cd $pkgname

  make INSTALL_ROOT="$pkgdir" install
}
