# Maintainer: pavbaranov <pavbaranov@gmail.com>

pkgname=simplelogin-git
#gitname=latte-dock
pkgver=49
pkgrel=1
pkgdesc='Very simple display manager'
arch=('x86_64')
url='https://cgit.kde.org/scratch/davidedmundson/simplelogin.git'
license=('GPL')
depends=('qt5-base')
#optdepends=('libunity: quicklists, counters, and progress bars for apps using libunity')
makedepends=('git' 'extra-cmake-modules')
#conflicts=('latte-dock')
#provides=('latte-dock')
source=("git+https://anongit.kde.org/scratch/davidedmundson/simplelogin.git")
sha256sums=('SKIP')

pkgver() {
  cd ${pkgname%-*}
  printf "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

build() {
  cd ${pkgname%-*}

  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release ..
  make 
}

package() {
  cd ${pkgname%-*}/build

  make DESTDIR=${pkgdir} install
}
