prepare() {
    msg "Add kdebug 398944 patch"
    patch -d $pkgname-$pkgver -p1 -i $srcdir/kdebug-398944.patch
    msg "Add kdebug 432153 patch"
    patch -d $pkgname-$pkgver -p1 -i $srcdir/kdebug-423153.patch
    msg "Add kdebug 423154 patch"
    patch -d $pkgname-$pkgver -p1 -i $srcdir/kdebug-423154.patch
    msg "Add kdebug 411537 patch"
    patch -d $pkgname-$pkgver -p1 -i $srcdir/kdebug-411537.patch
    msg "Add kdebug 326880 patch"
    patch -d $pkgname-$pkgver -p1 -i $srcdir/kdebug-326880.patch
    msg "Add kdebug 422748 patch"
    patch -d $pkgname-$pkgver -p1 -i $srcdir/kdebug-422748.patch
    msg "Add kdebug 419069 patch"
    patch -d $pkgname-$pkgver -p1 -i $srcdir/kdebug-419069.patch
    }
    
build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
