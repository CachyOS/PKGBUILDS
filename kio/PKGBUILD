prepare() {
    msg "Add kdebug 418528 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-418528.patch
    msg "Add kdebug 424082 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-424082.patch
    msg "Add kdebug 426690 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-426690.patch
    msg "Add kdebug 426704 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-426704.patch
    msg "Add kdebug 418518 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-418518.patch
    patch -d $pkgname-$pkgver -p1 -i ../4321b8ff.patch # Fix selecting files with '#'
    msg "Add kdebug 418711 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-418711.patch
    msg "Add kdebug 427876 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-427876.patch
    msg "Add kdebug 418655 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-418655.patch
    msg "Add kdebug 116617 patch"
    patch -d $pkgname-$pkgver -p1 -i ../kdebug-116617.patch
}

build() {
  cmake -B build -S $pkgname-$pkgver \
    -DCMAKE_INSTALL_LIBEXECDIR=lib \
    -DBUILD_TESTING=OFF \
    -DBUILD_QCH=ON
  cmake --build build
}

package() {
  DESTDIR="$pkgdir" cmake --install build
}
