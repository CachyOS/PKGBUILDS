# Maintainer: pavbaranov <pavbaranov at gmail dot com>
# Contributor: Damian N. <nycko123 at gmail>

pkgname=tweeeditor
_realname=TweeEditor
pkgver=1.0.4.1
pkgrel=1
pkgdesc="Simple text editor"
arch=('x86_64')
url="https://github.com/TweeChalice/TweeEditor"
license=('MPL')
depends=(qt5-base)
makedepends=(qt5-tools)
source=("$pkgname-$pkgver.tar.gz::https://github.com/TweeChalice/TweeEditor/archive/v$pkgver.tar.gz")
sha256sums=('0c873928c3aed803ea4f96de75b68d411fedebba8b3924d55a4c97f836dfa963')

prepare() {
    mkdir -p build
    }
    
build() {
    cd build 
    qmake ../TweeEditor-$pkgver \
        PREFIX=/usr 
    make
}

package() {
    install -Dm755 "$srcdir/build/TweeEdit" "$pkgdir/usr/bin/tweeeditor"
    install -Dm644 "$srcdir/TweeEditor-$pkgver/translations/TweeSimpleEdit_pl_PL.qm" "$pkgdir/usr/share/tweeeditor/TweeSimpleEdit_pl_PL.qm"
}
